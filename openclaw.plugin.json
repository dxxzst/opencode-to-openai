{
  "id": "opencode-to-openai",
  "name": "OpenCode Proxy",
  "description": "OpenAI-compatible API gateway for the OpenCode CLI, enabling free Kimi/GLM/MiniMax models in OpenClaw and other clients.",
  "version": "1.1.0",
  "providers": ["opencode"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "port": { "type": "integer", "default": 8083 },
      "apiKey": { "type": "string", "default": "" },
      "backendUrl": { "type": "string", "default": "http://127.0.0.1:4097" },
      "opencodePath": { "type": "string", "default": "opencode" }
    }
  },
  "uiHints": {
    "enabled": { "label": "Enable Plugin" },
    "port": { "label": "Proxy Port" },
    "apiKey": { "label": "API Key", "sensitive": true },
    "backendUrl": { "label": "OpenCode Backend URL", "placeholder": "http://127.0.0.1:4097" },
    "opencodePath": { "label": "OpenCode Executable Path", "placeholder": "opencode" }
  }
}
